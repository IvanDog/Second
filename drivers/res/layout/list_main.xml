<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <LinearLayout
        android:id="@+id/linear_detail_list_main"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout 
            android:layout_weight="1"  
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView 
                android:id="@+id/tv_parkingname"
                android:layout_weight="2"  
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#E94509"
                android:textSize="20px" />
            <TextView 
                android:id="@+id/tv_distance"
                android:layout_weight="1"  
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#E94509"
                android:textSize="20px" />
        </LinearLayout>
        <TextView 
            android:id="@+id/tv_location"
            android:layout_weight="1"  
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="20px" 
            android:maxEms="15"
            android:singleLine="true"
            android:ellipsize="end"/>
    <LinearLayout 
        android:layout_weight="1"  
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView 
            android:id="@+id/tv_parkingnumber"
            android:layout_weight="1"  
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20px" />
        <TextView 
            android:id="@+id/tv_fee"
            android:layout_weight="1"  
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20px" />
        <TextView 
            android:id="@+id/tv_parking_details"
            android:layout_weight="1"  
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20px" 
            android:clickable="true"
            android:text="详情"/>
    </LinearLayout>
 </LinearLayout>
 
     <LinearLayout
           android:id="@+id/linear_navigation"
           android:layout_weight="1"  
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:orientation="horizontal" >
            <ImageButton 
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_directions_black_18dp" />
            <TextView 
                android:layout_height="match_parent" 
                android:layout_width="wrap_content"  
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="导航"  />
        </LinearLayout>
  </LinearLayout>
  <include layout="@layout/list_main_hide"/>
</LinearLayout>